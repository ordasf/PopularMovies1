<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.movies.popular.popularmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.project.movies.popular.popularmovies.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.project.movies.popular.popularmovies.MovieDetailActivity"
            android:parentActivityName="com.project.movies.popular.popularmovies.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.project.movies.popular.popularmovies.MainActivity" />
        </activity>

        <provider
            android:authorities="com.project.movies.popular.popularmovies.data"
            android:name=".data.MovieFavouritesContentProvider"
            android:exported="false" />
    </application>

</manifest>